<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.vladyslavbabenko.passwordkeeper.javafx.controller.PasswordCheckController">
    <VBox prefHeight="100.0" prefWidth="300.0">
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
            <Label fx:id="errorLabel" text="Enter PC user" textAlignment="CENTER">
                <font>
                    <Font name="Calibri Bold" size="14.0"/>
                </font>
            </Label>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
            <TextField fx:id="userCheckField" alignment="CENTER" onAction="#switchToMainStage"
                       promptText="Enter PC user"
                       style="-fx-background-color: #ecf2f2; -fx-border-color: #65556f; -fx-border-width: 1; -fx-border-radius: 5;">
                <font>
                    <Font name="Calibri Bold" size="14.0"/>
                </font>
            </TextField>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
            <Button mnemonicParsing="false" onAction="#switchToMainStage"
                    style="-fx-background-color: #d4e8e6; -fx-border-color: #65556f; -fx-border-width: 1; -fx-border-radius: 5;"
                    text="Submit">
                <font>
                    <Font name="Calibri Bold" size="14.0"/>
                </font>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>